@using BakeryMVC.Models
<h1>Ordered Items</h1>
@if (Model.Count == 0)
{
  <p>There are no orders in the List.</p>
}
<ul>
    @foreach (Item item in Model)
    {
      <li><a href='/items/@item.Id'>@item.Description</a></li>
    }
</ul>

<a href='/items/new'>Add a new order</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Orders</button>
</form>